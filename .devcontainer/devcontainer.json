{
    "name": "Typst",
    "build": {
        "dockerfile": "Dockerfile"
    },
    "features": {
        "ghcr.io/devcontainers/features/git:1": {}
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "myriad-dreamin.tinymist",
                "nefrob.vscode-just-syntax"
            ],
            "settings": {
                "tinymist": {
                    "formatterMode": "typstyle",
                    "fontPaths": [
                        "./fonts"
                    ]
                },
                "files.associations": {
                    "*.typ": "typst"
                }
            }
        }
    }
}